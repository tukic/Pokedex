<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/surface_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <hr.sofascore.pokedex.ui.views.EvolutionItem
        android:id="@+id/current_evolution_item"
        android:layout_width="132dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/current_evolution_item_background"
        app:evolution_phase="@string/unevolved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/arrow_back_view"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:background="@drawable/ic_icons_android_ic_arrow_back"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/current_evolution_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <hr.sofascore.pokedex.ui.views.EvolutionItem
        android:id="@+id/next_evolution_item"
        android:layout_width="132dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/evolution_item_background"
        app:evolution_phase="@string/first_evolution"
        app:layout_constraintStart_toEndOf="@id/arrow_back_view"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>