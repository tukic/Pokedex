<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/reorder_pokemon_item_background_view"
        android:layout_width="288dp"
        android:layout_height="96dp"
        app:layout_goneMarginTop="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/search_bar_background"/>

    <ImageView
        android:id="@+id/pokemon_image_view"
        android:layout_width="61dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/reorder_pokemon_item_background_view"
        app:layout_constraintBottom_toBottomOf="@id/reorder_pokemon_item_background_view"
        app:layout_constraintStart_toStartOf="@id/reorder_pokemon_item_background_view" />

    <TextView
        android:id="@+id/pokemon_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@id/pokemon_image_view"
        app:layout_constraintTop_toTopOf="@id/reorder_pokemon_item_background_view"
        style="@style/Headline2DarkLeft"/>

    <TextView
        android:id="@+id/pokedex_num_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="4dp"
        style="@style/Headline3ColdGrayLeft"
        app:layout_constraintStart_toEndOf="@id/pokemon_image_view"
        app:layout_constraintTop_toBottomOf="@id/pokemon_name_text_view" />

    <ImageView
        android:id="@+id/star_icon_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/reorder_pokemon_item_background_view"
        app:layout_constraintBottom_toBottomOf="@id/reorder_pokemon_item_background_view"
        app:layout_constraintEnd_toEndOf="@id/reorder_pokemon_item_background_view" />

    <View
        android:id="@+id/reorder_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toEndOf="@id/reorder_pokemon_item_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_reorder"/>

</androidx.constraintlayout.widget.ConstraintLayout>