<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tint_secondary</item>
        <item name="colorPrimaryVariant">@color/tint_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/tint_primary</item>
        <item name="colorSecondaryVariant">@color/tint_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BottomNavigationBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tint_secondary</item>
