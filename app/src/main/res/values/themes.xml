        <item name="colorSecondary">@color/surface_0</item>
        <item name="colorSecondaryVariant">@color/tint_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PokemonTypeParent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
